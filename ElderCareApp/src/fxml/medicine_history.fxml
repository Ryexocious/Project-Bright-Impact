<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MedicineHistoryController"
            stylesheets="@../styles/medicine-history.css"
            prefWidth="1000" prefHeight="600">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="top-bar">
            <Label text="Medicine History" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="main-scroll">
            <content>
                <VBox fx:id="mainContainer" alignment="TOP_CENTER" spacing="20" styleClass="main-container">

                    <!-- Completed Medicines Section -->
                    <VBox spacing="12" styleClass="section-container">
                        <Label text="Completed Medicines" styleClass="section-title"/>
                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="filter-container">
                            <TextField fx:id="completedSearchField" promptText="Search Medicine" styleClass="search-field"/>
                            <Label text="From:" styleClass="filter-label"/>
                            <DatePicker fx:id="completedFromDate" styleClass="filter-datepicker"/>
                            <Label text="To:" styleClass="filter-label"/>
                            <DatePicker fx:id="completedToDate" styleClass="filter-datepicker"/>
                        </HBox>
                        <TableView fx:id="completedMedicinesTable" prefHeight="200" maxHeight="220" styleClass="data-table">
                            <columns>
                                <TableColumn text="Medicine" fx:id="completedMedNameCol" prefWidth="200"/>
                                <TableColumn text="Type" fx:id="completedMedTypeCol" prefWidth="120"/>
                                <TableColumn text="Amount" fx:id="completedMedAmountCol" prefWidth="100"/>
                                <TableColumn text="Doses Taken" fx:id="completedMedDosesCol" prefWidth="120"/>
                                <TableColumn text="Date Range" fx:id="completedMedDateRangeCol" prefWidth="220"/>
                            </columns>
                        </TableView>
                    </VBox>

                    <!-- Ongoing Medicines Section -->
                    <VBox spacing="12" styleClass="section-container">
                        <Label text="Ongoing Medicines" styleClass="section-title"/>
                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="filter-container">
                            <TextField fx:id="ongoingSearchField" promptText="Search Medicine" styleClass="search-field"/>
                            <Label text="From:" styleClass="filter-label"/>
                            <DatePicker fx:id="ongoingFromDate" styleClass="filter-datepicker"/>
                            <Label text="To:" styleClass="filter-label"/>
                            <DatePicker fx:id="ongoingToDate" styleClass="filter-datepicker"/>
                        </HBox>
                        <TableView fx:id="ongoingMedicinesTable" prefHeight="200" maxHeight="220" styleClass="data-table">
                            <columns>
                                <TableColumn text="Medicine" fx:id="ongoingMedNameCol" prefWidth="200"/>
                                <TableColumn text="Type" fx:id="ongoingMedTypeCol" prefWidth="120"/>
                                <TableColumn text="Amount" fx:id="ongoingMedAmountCol" prefWidth="100"/>
                                <TableColumn text="Doses Taken" fx:id="ongoingMedDosesCol" prefWidth="120"/>
                                <TableColumn text="Date Range" fx:id="ongoingMedDateRangeCol" prefWidth="220"/>
                            </columns>
                        </TableView>
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>