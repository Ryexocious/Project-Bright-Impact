<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CaretakerDashboardController">

    <!-- left navigation -->
    <left>
        <VBox spacing="12" style="-fx-background-color: #f8f9fb; -fx-padding: 18;">
            <Label text="Caretaker Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <Button text="🩺 Create Medicine Schedule"
                    onAction="#handleCreateMedicineSchedule"
                    style="-fx-font-size: 14px;"/>

            <Button text="📅 Today's Schedule"
                    onAction="#handleTodaysSchedule"
                    style="-fx-font-size: 14px;"/>

            <Button text="📖 Medicine History"
                    onAction="#handleMedicineHistory"
                    style="-fx-font-size: 14px;"/>

            <Button text="✏️ Edit Current Medicine Doses"
                    onAction="#handleEditCurrentDoses"
                    style="-fx-font-size: 14px;"/>

            <Button text="📊 Monitor Elder Vitals"
                    onAction="#handleVitalsMonitoring"
                    style="-fx-font-size: 14px;"/>

            <Button text="🚪 Logout"
                    onAction="#handleLogout"
                    style="-fx-font-size: 14px; -fx-background-color: #bdc3c7;"/>
        </VBox>
    </left>

    <!-- center: friendly welcome -->
    <center>
        <HBox alignment="CENTER" style="-fx-padding: 24;">
            <Label text="Welcome, Caretaker 🧑‍⚕️"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        </HBox>
    </center>

</BorderPane>
