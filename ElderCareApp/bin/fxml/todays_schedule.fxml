<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.TodaysScheduleController"
            stylesheets="@../styles/today.css"
            prefWidth="960"
            prefHeight="500">

    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="8" styleClass="top-bar">
            <Label text="Medicine Schedule" styleClass="header-label"/>
        </HBox>
    </top>

    <!-- Scrollable schedule container -->
    <center>
        <ScrollPane fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    styleClass="scroll-pane"
                    prefHeight="420">
            <content>
                <VBox fx:id="scheduleContainer"
                      alignment="TOP_CENTER"
                      spacing="16"
                      styleClass="schedule-container"
                      maxWidth="900">
                    <!-- Date label + dose cards + custom day button will be added dynamically -->
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Bottom bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="bottom-bar">
            <Label fx:id="elderFoundLabel"
                   text="Detecting linked elder..."
                   styleClass="status-label"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </bottom>

</BorderPane>