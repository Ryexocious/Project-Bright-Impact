<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MedicineController"
            style="-fx-background-color: #f5f7fb;"
            prefHeight="560" prefWidth="552">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="8"
              style="-fx-padding:10 12 10 12; -fx-background-color: transparent;"
              prefHeight="44">
            <Label text="ElderCare — Medicine Scheduler"
                   style="-fx-font-size:14; -fx-text-fill:#222; -fx-font-weight:600;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="closeButton" text="✖"
                    style="-fx-background-color:transparent; -fx-font-size:14; -fx-text-fill:#666; -fx-padding:6;">
                <tooltip>
                    <Tooltip text="Close"/>
                </tooltip>
            </Button>
        </HBox>
    </top>

    <center>
        <!-- fx:id used so controller can bind to viewport size for fullscreen resizing -->
        <ScrollPane fx:id="centerScroll" fitToWidth="true" pannable="true"
                    style="-fx-background-color:transparent;">
            <content>
                <VBox alignment="TOP_CENTER" spacing="14"
                      style="-fx-padding: 14;" maxWidth="516" >

                    <!-- Elder Info & Status -->
                    <HBox alignment="CENTER" spacing="10"
                          style="-fx-padding: 0 4 0 4;" maxWidth="492">
                        <Label fx:id="elderFoundLabel" text="(loading elder...)"
                               style="-fx-font-size:14; -fx-text-fill:#333;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="statusLabel" text="Ready."
                               style="-fx-font-size:12; -fx-text-fill:#666;"/>
                    </HBox>

                    <!-- Today's Schedule -->
                    <VBox alignment="TOP_CENTER" spacing="8"
                          style="-fx-background-color: white; -fx-padding:12; -fx-border-radius:10; -fx-background-radius:10;
                                 -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.06), 6, 0, 0, 2);"
                          maxWidth="492" >
                        <Label text="Today's Schedule" style="-fx-font-size:16; -fx-font-weight:600;"/>
                        <ListView fx:id="scheduleListView"
                                  style="-fx-background-color:transparent; -fx-border-radius:8; -fx-pref-width:468;" />
                    </VBox>

                    <!-- Add Medicine Section -->
                    <VBox alignment="TOP_CENTER" spacing="10"
                          style="-fx-background-color: white; -fx-padding:12; -fx-border-radius:10; -fx-background-radius:10;
                                 -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.06), 6, 0, 0, 2);"
                          maxWidth="492">

                        <Label text="Add Medicine" style="-fx-font-size:15; -fx-font-weight:600;"/>

                        <!-- Medicine Info Form -->
                        <GridPane hgap="10" vgap="8" style="-fx-pref-width:468;">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30"/>
                                <ColumnConstraints percentWidth="70"/>
                            </columnConstraints>

                            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                            <TextField fx:id="medicineNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                            <Label text="Type:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                            <ComboBox fx:id="medicineTypeCombo" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                            <Label text="Pills / dose:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                            <Spinner fx:id="pillsPerDoseSpinner" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                            <Label text="Syrup ml / dose:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                            <Spinner fx:id="syrupMlPerDoseSpinner" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                            <Label text="Units / dose:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                            <Spinner fx:id="unitsPerDoseSpinner" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                            <!-- NEW: Max snooze count -->
                            <Label text="Max snoozes (0-2):" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                            <Spinner fx:id="maxSnoozeSpinner" GridPane.rowIndex="5" GridPane.columnIndex="1">
                                <tooltip>
                                    <Tooltip text="Allowed snooze count. Each snooze is 10 minutes."/>
                                </tooltip>
                            </Spinner>
                        </GridPane>

                        <Separator/>

                        <!-- Active Date Range -->
                        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-pref-width:468;">
                            <Label text="Active from:"/>
                            <DatePicker fx:id="startDatePicker"/>
                            <Label text="to"/>
                            <DatePicker fx:id="endDatePicker"/>
                            <Region HBox.hgrow="ALWAYS"/>
                        </HBox>

                        <Separator/>

                        <!-- Time Picker Section -->
                        <VBox spacing="8" alignment="CENTER_LEFT" style="-fx-pref-width:468;">
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Label text="Time (1-hour steps):"/>
                                <ComboBox fx:id="timePickerCombo" prefWidth="120"/>
                                <Button fx:id="addTimeButton" text="Add"
                                        style="-fx-background-color:#1976d2; -fx-text-fill:white; -fx-padding:6 10;" />
                                <Button fx:id="removeTimeButton" text="Remove"
                                        style="-fx-background-color:#e0e0e0; -fx-padding:6 10;" />
                                <Button fx:id="clearTimesButton" text="Clear"
                                        style="-fx-background-color:#e0e0e0; -fx-padding:6 10;" />
                                <Region HBox.hgrow="ALWAYS"/>
                            </HBox>
                            <ListView fx:id="timesListView" prefWidth="468" prefHeight="110" />
                        </VBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT"
              style="-fx-padding:10 16 10 16; -fx-background-color: transparent;">
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="saveButton" text="Save"
                    style="-fx-background-color:#2e7d32; -fx-text-fill:white; -fx-padding:8 12; -fx-font-weight:600;" />
            <Button fx:id="backButton" text="Back"
                    style="-fx-background-color:#c62828; -fx-text-fill:white; -fx-padding:8 12; -fx-font-weight:600;" />
        </HBox>
    </bottom>
</BorderPane>
